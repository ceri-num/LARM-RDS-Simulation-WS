<?xml version="1.0"?>
<launch>

	<!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
	<arg name="world_file" value="worlds/willowgarage.world"/> 

	<include file="$(find turtlebot_gazebo)/launch/start_world.launch">
		<arg name="world_file" value="$(arg world_file)" />
	</include>

	<arg name="x" default="0.0" />
	<arg name="y" default="0.0" />
	<arg name="z" default="0.0" />
	<arg name="roll" default="0.0"/>
	<arg name="pitch" default="0.0"/>
	<arg name="yaw" default="0.0"/>

	<arg name="base"      value="kobuki"/> <!-- kobuki -->
	<arg name="stacks"    value="hexagons"/>  <!-- circles, hexagons -->
	<arg name="3d_sensor" value="asus_xtion_pro"/>  <!-- kinect, asus_xtion_pro -->

	<arg name="urdf_file" default="$(find xacro)/xacro '$(find larm)/urdf/turtlebot_car.urdf.xacro'" />
  	<param name="robot_description" command="$(arg urdf_file)" />
  
	<node name="spawn_turtlebot_model" pkg="gazebo_ros" type="spawn_model"
			args="$(optenv ROBOT_INITIAL_POSE) -unpause -urdf -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) -param robot_description -model mobile_base"/>

	<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
		<param name="publish_frequency" type="double" value="30.0" />
	</node>

</launch>
